rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isSeller() {
      return isSignedIn() && exists(/databases/$(database)/documents/sellers/$(request.auth.uid));
    }

    function isSellerForEvent(eventId) {
      return isSeller() && get(/databases/$(database)/documents/events/$(eventId)).data.seller_id == request.auth.uid;
    }

    match /profiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isSeller();
    }

    match /events/{eventId}/orders/{orderId} {
      allow read: if false;
      allow write: if false;
    }

    match /event_categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_features/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_trust_badges/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_testimonials/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_partners/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_how_it_works/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /homepage_faqs/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /venues/{venueId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isSeller();
    }

    match /orders/{orderId} {
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.user_id == request.auth.uid ||
        isSellerForEvent(resource.data.event_id) ||
        isAdmin()
      );
      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.user_id == request.auth.uid &&
        request.resource.data.total_amount == resource.data.total_amount
      );
      allow delete: if false;
    }

    match /tickets/{ticketId} {
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.user_id == request.auth.uid ||
        isSellerForEvent(resource.data.event_id) ||
        isAdmin()
      );
      allow update: if isSignedIn() && (
        resource.data.user_id == request.auth.uid ||
        isSellerForEvent(resource.data.event_id) ||
        isAdmin()
      );
      allow delete: if false;
    }

    match /promo_codes/{promoId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isSeller();
    }

    match /favorites/{favoriteId} {
      allow read: if isSignedIn() && resource.data.user_id == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }

    match /event_reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
  }
}
